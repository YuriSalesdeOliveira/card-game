{% extends "template/layout.html.twig" %}

{% block content %}

    <div class="w-[600px] py-5 px-10 mx-auto mt-10 mb-20 text-slate-800 rounded bg-slate-200">
        <h3 class="font-medium">Chegou a hora !</h3>
        <p>
            O desafiante está destacado. Escolha o heroi que irá
            batalhar a favor da sua equipe.
        </p>
    </div>

    <form action="{{ route.urlFor('toBattle') }}" method="post">
        <div class="card-group">
            {% for card in battle.playerCardCollection %}
                <div class="card-item">

                    <input type="radio" name="card-to-battle" id="{{ card.id }}"
                        value="{{ card.id }}" class="card-item-input">

                    <label for="{{ card.id }}" class="card-item-content">
                        <img src="{{ card.image }}" alt="card-image">
                        <ul>
                            <li><span>name:</span> {{ card.name }}</li>
                            <li><span>intelligence:</span> {{ card.intelligence }}</li>
                            <li><span>force:</span> {{ card.force }}</li>
                            <li><span>velocity:</span> {{ card.velocity }}</li>
                            <li><span>resistance:</span> {{ card.resistance }}</li>
                            <li><span>fighting:</span> {{ card.fighting }}</li>
                            <li><span>power:</span> {{ card.power }}</li>
                            <li><span>overall:</span> {{ card.overall }}</li>
                        </ul>
                    </label>

                </div>
            {% endfor %}
        </div>

        <button type="submit"
            class="flex text-sm text-slate-100 uppercase py-2 px-8 my-10 mx-auto
                bg-slate-400 rounded hover:bg-slate-500">To Battle</button>
    </form>

    <div class="card-group">
        {% for card in battle.machineCardCollection %}
            <div class="card-item">

                <div class="card-item-content">
                    <img src="{{ card.image }}" alt="card-image">
                    <ul>
                        <li><span>name:</span> {{ card.name }}</li>
                        <li><span>intelligence:</span> {{ card.intelligence }}</li>
                        <li><span>force:</span> {{ card.force }}</li>
                        <li><span>velocity:</span> {{ card.velocity }}</li>
                        <li><span>resistance:</span> {{ card.resistance }}</li>
                        <li><span>fighting:</span> {{ card.fighting }}</li>
                        <li><span>power:</span> {{ card.power }}</li>
                        <li><span>overall:</span> {{ card.overall }}</li>
                    </ul>
                </div>

            </div>
        {% endfor %}
    </div>

{% endblock content %}