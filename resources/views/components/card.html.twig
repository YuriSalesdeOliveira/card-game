<div class="c-card">

    {% if (input) %}
        <label for="card-{{ card.id }}" class="c-card__label">

            <input
                    type="{{ input.type }}"
                    name="{{ input.name }}"
                    value="{{ card.id }}"
                    id="card-{{ card.id }}"
                    class="c-card__input"
            >

            <div class="c-card__wrapper">

                <img
                        src="{{ card.image }}"
                        alt="card {{ card.name }}"
                        class="c-card__image"
                >

                <ul class="c-card__skills">
                    <li class="c-card__skill"><span>intelligence:</span> {{ card.intelligence }}</li>
                    <li class="c-card__skill"><span>force:</span> {{ card.force }}</li>
                    <li class="c-card__skill"><span>velocity:</span> {{ card.velocity }}</li>
                    <li class="c-card__skill"><span>resistance:</span> {{ card.resistance }}</li>
                    <li class="c-card__skill"><span>fighting:</span> {{ card.fighting }}</li>
                    <li class="c-card__skill"><span>power:</span> {{ card.power }}</li>
                    <li class="c-card__skill"><span>overall:</span> {{ card.overall }}</li>
                </ul>

            </div>

        </label>
    {% else %}
        <div class="c-card__wrapper">

            <img
                    src="{{ card.image }}"
                    alt="card {{ card.name }}"
                    class="c-card__image"
            >

            <ul class="c-card__skills">
                <li class="c-card__skill"><span>intelligence:</span> {{ card.intelligence }}</li>
                <li class="c-card__skill"><span>force:</span> {{ card.force }}</li>
                <li class="c-card__skill"><span>velocity:</span> {{ card.velocity }}</li>
                <li class="c-card__skill"><span>resistance:</span> {{ card.resistance }}</li>
                <li class="c-card__skill"><span>fighting:</span> {{ card.fighting }}</li>
                <li class="c-card__skill"><span>power:</span> {{ card.power }}</li>
                <li class="c-card__skill"><span>overall:</span> {{ card.overall }}</li>
            </ul>

        </div>
    {% endif %}

</div>